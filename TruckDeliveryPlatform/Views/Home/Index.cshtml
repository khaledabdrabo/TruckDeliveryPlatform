@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 mb-4">Welcome to Truck Delivery Platform</h1>
        <p class="lead text-muted">Connect with reliable truck owners and manage your deliveries efficiently</p>
    </div>
    
    <div class="row g-4 justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card feature-card h-100">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-truck fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Post a Job</h5>
                    <p class="card-text">Need to transport something? Create a new delivery job and get competitive bids from trusted truck owners.</p>
                    <a asp-controller="Jobs" asp-action="Create" class="btn btn-primary mt-3">
                        <i class="fas fa-plus-circle me-2"></i>Post a Job
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-4">
            <div class="card feature-card h-100">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-list-alt fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">My Jobs</h5>
                    <p class="card-text">View and manage your existing delivery jobs, track their status, and communicate with truck owners.</p>
                    <a asp-controller="Jobs" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="fas fa-clipboard-list me-2"></i>View My Jobs
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">How It Works</h5>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="mb-3">
                                    <i class="fas fa-pencil-alt fa-2x text-primary"></i>
                                </div>
                                <h6>1. Post Your Job</h6>
                                <p class="text-muted">Describe your delivery needs and preferences</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="mb-3">
                                    <i class="fas fa-handshake fa-2x text-primary"></i>
                                </div>
                                <h6>2. Get Bids</h6>
                                <p class="text-muted">Receive competitive bids from verified truck owners</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="mb-3">
                                    <i class="fas fa-check-circle fa-2x text-primary"></i>
                                </div>
                                <h6>3. Choose & Track</h6>
                                <p class="text-muted">Select the best bid and track your delivery</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 